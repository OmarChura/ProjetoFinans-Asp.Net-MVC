<!--jquery datatable https://datatables.net/ , site para paginação-->
@model List<OrcamentoPessoalViewModel>

<table class="table display" id="table-contatos-usuario">
    <thead>
        <tr>
            <th scope="col">Data</th>
            <th scope="col">Usuario</th>
            <th scope="col">Tipo</th>
            <th scope="col">Descriçao</th>
            <th scope="col">Valor</th>
            <th scope="col">Ativo</th>
        </tr>
    </thead>
    <tbody>
        @if (Model != null && Model.Any())
        {
            foreach (var orcamento in Model)
            {
                <tr>
                    <th scope="row">@orcamento.Dia/@orcamento.Mes/@orcamento.Ano</th>
                    <td>@orcamento.Usuario.Nome</td>
                    <td>@orcamento.TipoDespesa</td>
                    <td>@orcamento.Descricao</td>
                    <td>@orcamento.Valor.ToString("C")</td>
                    <td>@orcamento.Ativo</td>
                </tr>
            }
        }
        else
        {
            <tr class="add">
                <td valign="top" colspan="5">Nenhum Contato Encontrado</td>
            </tr>
        }
    </tbody>
</table>