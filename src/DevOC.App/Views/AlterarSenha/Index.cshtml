@model DevOC.App.ViewModels.AlterarSenhaViewModel
@{
    ViewData["Title"] = "Alterar senha do Usúario";
}

<!-- inicio seção home -->
<section class="section-topo pt-4">
    <div class="container">
        <div class="section-topo-left ">
            <h1 class="display-4">Alterar Senha</h1>
            <p>
                Lorem ipsum dolor sit amet, consectetur adipiscing elit. Integer scelerisque hendrerit lacus sit amet aliquet. Cras non venenatis purus.
            </p>

            <div class="disponivel-icones">
                <p>
                    Disponivel para
                    <a href="https://www.android.com/intl/pt-BR_br/">
                        <button><i class="fab fa-android"></i></button>
                    </a>
                    <a href="https://www.apple.com/br/">
                        <button><i class="fab fa-apple"></i></button>
                    </a>
                </p>
            </div>

            <div class="cadastrar-consultar">
            </div>
        </div>

        <div class="capa-mulher">
            <img src="imagens/capa-mulher.png" alt="" srcset="">
        </div>
        <div class="clear"></div>
    </div>
</section>
<!-- fim seção home -->

@if (TempData["MensagemErro"] != null)
{
    <div class="alert alert-danger" role="alert">
        <button type="button" class="btn btn-danger btn-sm close-alert" arial-labe="Close">x</button>
        @TempData["MensagemErro"]
    </div>
}

@if (TempData["MensagemSucesso"] != null)
{
    <div class="alert alert-success" role="alert">
        <button type="button" class="btn btn-danger btn-sm close-alert" arial-labe="Close">x</button>
        @TempData["MensagemSucesso"]
    </div>
}

<!-- inicio seção formulario cadastrar -->
<section class="caixa">
    <div class="container">
        <div class="col-md-4">
            <form asp-controller="AlterarSenha" asp-action="Alterar" method="post">


                <div class="form-group mb-3">
                    <label for="SenhaAtual" class="form-label">Senha Atual</label>
                    <input type="password" asp-for="SenhaAtual" class="form-control" placeholder="Digite a senha atual do usúario">
                    @Html.ValidationMessageFor(x => x.SenhaAtual)
                </div>

                <div class="form-group mb-3">
                    <label for="NovaSenha" class="form-label">Nova Senha</label>
                    <input type="password" asp-for="NovaSenha" class="form-control" placeholder="Digite a nova senha do usúario">
                    @Html.ValidationMessageFor(x => x.NovaSenha)
                </div>

                <div class="form-group mb-3">
                    <label for="ConfirmarNovaSenha" class="form-label">Confirmar Nova Senha</label>
                    <input type="password" asp-for="ConfirmarNovaSenha" class="form-control" placeholder="Digite a confirmação da nova senha do usúario">
                    @Html.ValidationMessageFor(x => x.ConfirmarNovaSenha)
                </div>

                <button type="submit" class="btn btn-primary btn-block">Alterar</button>
                <a class="btn btn-secondary" asp-controller="Home" asp-action="Index" role="button">Voltar</a>
            </form>
        </div>
    </div>
</section>
<!-- fim seção formulario cadastrar -->
@section Scripts {
    @{
        await Html.RenderPartialAsync("_ValidationScriptsPartial");
    }
    
}